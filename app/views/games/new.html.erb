  <div class="container">
    <h1>NEW GAME </h1>


    <ul class="list-inline">
    <% @random.each do |letter| %>
    <li class="list-inline-item badge badge-primary text-wrap p-2 font-weight-bold display-3"><h1><%= letter %> </h1></li>
    <% end %>
    </ul>

    <div class="container form-group">
        <form action="/score" method="post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <label for="attempt">What is the longest word you can find?</label> <br>
          <input type="text" name="attempt" id="attempt" class="form-control">
          <%= hidden_field_tag :start_time, @start_time %>
          <%= hidden_field_tag :letters, @random %>
          <input type="submit" value="Play!" class="btn btn-primary">
        </form>
    </div>
  </div>
